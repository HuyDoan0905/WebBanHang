@model SV20T1020661.DomainModels.Shipper
@{

}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperId" method="post">
            <div class="form-group">
                <label>Mã người giao hàng:</label>
                <p class="form-control-static">@Model.ShipperId</p>
            </div>

            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group">
                @if(!SV20T1020661.BusinessLayers.CommonDataService.IsUsedShipper(Model.ShipperId))
                {
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Xác nhận xoá
                </button>
                }
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>

