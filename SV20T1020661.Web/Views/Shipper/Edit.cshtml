@model SV20T1020661.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <div class="form-group">
                <label>Mã người giao hàng:</label>
                <input type="text" class="form-control" name="ShipperId" value="@Model.ShipperId">
            </div>

            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input type="text" class="form-control" name="ShipperName" value="@Model.ShipperName">
                @Html.ValidationMessage("ShipperName", new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage("Phone", new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
