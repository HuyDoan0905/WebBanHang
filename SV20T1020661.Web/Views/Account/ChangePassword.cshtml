<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>Đổi mật khẩu</b></a>
        </div>

        <div class="login-box-body">

            <form action="~/Account/ChangePassword" method="post">
        
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Nhập mật khẩu cũ">
                    <span class="glyphicon form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Nhập mật khẩu mới">
                    <span class="glyphicon form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Xác nhận mật khẩu mới">
                    <span class="glyphicon form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <button type="button" class="btn btn-default btn-block btn-flat" onclick="window.history.back()">Quay lại</button>
                    </div>
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đổi mật khẩu</button>
                    </div>
                </div>
            </form>

        </div>

    </div>
</body>